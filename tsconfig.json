{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
